/* ===== CIR Library Style Enhancements ===== */
/* Quick refresh for a more polished scholarly look */
/* Google Fonts loaded in HTML head for performance */

:root {
    /* Refined color palette - deeper, richer tones */
    --primary-color: #1e3a5f;      /* Deep navy */
    --secondary-color: #8b3a3a;    /* Rich burgundy/maroon */
    --accent-color: #c9a227;       /* Antique gold */
    --text-color: #2d2d2d;
    --text-light: #5a5a5a;
    --bg-color: #faf9f7;           /* Warm paper */
    --bg-warm: #f5f3ef;
    --border-color: #e0dcd4;
    
    /* Enhanced typography */
    --font-display: 'Playfair Display', Georgia, serif;
    --font-body: 'Crimson Text', Georgia, serif;
    --font-ui: 'Source Sans Pro', -apple-system, sans-serif;
}

/* ===== Header Refinements ===== */
.site-header {
    background: linear-gradient(180deg, #ffffff 0%, var(--bg-warm) 100%);
    border-bottom: 3px solid var(--primary-color);
    box-shadow: 0 2px 8px rgba(0,0,0,0.06);
}

.site-title {
    font-family: var(--font-display);
    font-weight: 600;
    letter-spacing: -0.5px;
}

.site-tagline {
    font-family: var(--font-body);
    color: var(--text-light);
    letter-spacing: 0.5px;
}

.main-nav a {
    font-family: var(--font-ui);
    font-weight: 600;
    letter-spacing: 1px;
    font-size: 0.85rem;
    position: relative;
    padding-bottom: 0.5rem;
}

.main-nav a::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 0;
    width: 0;
    height: 2px;
    background: var(--secondary-color);
    transition: width 0.3s ease;
}

.main-nav a:hover::after,
.main-nav a.active::after {
    width: 100%;
}

/* ===== Hero Section ===== */
.hero {
    background: linear-gradient(135deg, var(--bg-warm) 0%, #ffffff 50%, var(--bg-warm) 100%);
    padding: 4rem 0;
    position: relative;
}

.hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, var(--secondary-color), var(--accent-color), var(--secondary-color));
}

.hero h2 {
    font-family: var(--font-display);
    font-weight: 400;
    font-size: 3.2em;
    color: var(--primary-color);
    letter-spacing: -1px;
}

.lead {
    font-family: var(--font-body);
    font-size: 1.25em;
    line-height: 1.6;
}

/* ===== Search Bar Enhancement ===== */
.search-form {
    box-shadow: 0 4px 24px rgba(0,0,0,0.08);
    border: 1px solid var(--border-color);
}

#home-search-input {
    font-family: var(--font-body);
    border-color: var(--border-color);
}

#home-search-input:focus {
    border-color: var(--primary-color);
    box-shadow: 0 0 0 3px rgba(30, 58, 95, 0.1);
}

.search-submit {
    background: var(--secondary-color);
    font-family: var(--font-ui);
    letter-spacing: 0.5px;
}

.search-submit:hover {
    background: var(--primary-color);
}

/* ===== Category Cards ===== */
.category-box,
.section-card {
    background: #ffffff;
    border: 1px solid var(--border-color);
    border-radius: 8px;
    box-shadow: 0 2px 8px rgba(0,0,0,0.04);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.category-box::before,
.section-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 3px;
    background: linear-gradient(90deg, var(--secondary-color), var(--accent-color));
    opacity: 0;
    transition: opacity 0.3s ease;
}

.category-box:hover,
.section-card:hover {
    transform: translateY(-4px);
    box-shadow: 0 8px 24px rgba(0,0,0,0.1);
    border-color: var(--secondary-color);
}

.category-box:hover::before,
.section-card:hover::before {
    opacity: 1;
}

.category-box h4 {
    font-family: var(--font-display);
    color: var(--primary-color);
}

/* ===== Buttons ===== */
.btn,
.btn-primary,
.btn-start {
    font-family: var(--font-ui);
    font-weight: 600;
    letter-spacing: 0.5px;
    background: var(--secondary-color);
    border-radius: 6px;
    box-shadow: 0 2px 4px rgba(139, 58, 58, 0.3);
    transition: all 0.2s ease;
}

.btn:hover,
.btn-primary:hover,
.btn-start:hover {
    background: var(--primary-color);
    box-shadow: 0 4px 8px rgba(30, 58, 95, 0.3);
    transform: translateY(-1px);
}

.btn-secondary {
    background: transparent;
    color: var(--secondary-color);
    border: 2px solid var(--secondary-color);
    box-shadow: none;
}

.btn-secondary:hover {
    background: var(--secondary-color);
    color: white;
}

/* ===== Essay & Content Typography ===== */
.essay-header h1,
.chapter-header h1 {
    font-family: var(--font-display);
    font-weight: 400;
    letter-spacing: -0.5px;
}

.content-body,
.chapter-content {
    font-family: var(--font-body);
    font-size: 1.1rem;
    line-height: 1.85;
}

.content-body h2,
.content-body h3 {
    font-family: var(--font-display);
    color: var(--primary-color);
    margin-top: 2.5rem;
}

/* ===== Translation/Book Cards ===== */
.translation-card,
.book-card {
    border-radius: 8px;
    border: 1px solid var(--border-color);
    background: linear-gradient(180deg, #ffffff 0%, var(--bg-warm) 100%);
    box-shadow: 0 2px 8px rgba(0,0,0,0.04);
}

.translation-card:hover,
.book-card:hover {
    box-shadow: 0 8px 24px rgba(0,0,0,0.1);
}

.translation-card h2,
.book-card h3 {
    font-family: var(--font-display);
}

/* ===== Footer ===== */
.site-footer {
    background: linear-gradient(180deg, var(--primary-color) 0%, #152a45 100%);
    border-top: 4px solid var(--accent-color);
}

/* ===== Blockquotes ===== */
blockquote {
    border-left: 4px solid var(--accent-color);
    background: var(--bg-warm);
    padding: 1.5rem 2rem;
    border-radius: 0 8px 8px 0;
    font-family: var(--font-body);
}

/* ===== Citations ===== */
.citation {
    background: linear-gradient(135deg, var(--bg-warm) 0%, #ffffff 100%);
    border-left: 4px solid var(--accent-color);
    border-radius: 0 8px 8px 0;
}

/* ===== Subtle Background Pattern ===== */
body {
    background-color: var(--bg-color);
    background-image: 
        radial-gradient(circle at 100% 0%, rgba(201, 162, 39, 0.03) 0%, transparent 25%),
        radial-gradient(circle at 0% 100%, rgba(139, 58, 58, 0.03) 0%, transparent 25%);
}

/* ===== Chapter Navigation ===== */
.chapter-nav-bar {
    background: linear-gradient(180deg, var(--bg-warm) 0%, #ffffff 100%);
    border: 1px solid var(--border-color);
}

.nav-btn {
    font-family: var(--font-ui);
}

/* ===== Essay Cards ===== */
.essay-card {
    border-radius: 8px;
    transition: all 0.3s ease;
}

.essay-card:hover {
    box-shadow: 0 8px 24px rgba(0,0,0,0.1);
}

.essay-card h2 {
    font-family: var(--font-display);
}

/* ===== Smooth Scrolling ===== */
html {
    scroll-behavior: smooth;
}

/* ===== Selection Color ===== */
::selection {
    background: rgba(139, 58, 58, 0.2);
    color: var(--text-color);
}
