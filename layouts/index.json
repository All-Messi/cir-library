{{- $pages := where .Site.RegularPages "Type" "in" (slice "essays" "chapter") -}}
{{- $index := slice -}}
{{- range $pages -}}
  {{- $titleCats := slice -}}
  {{- range .Params.categories -}}
    {{- $titleCats = $titleCats | append (. | lower | title) -}}
  {{- end -}}
  {{- $index = $index | append (dict "title" .Title "permalink" .Permalink "content" (.Plain | truncate 500) "categories" $titleCats "book" .Params.book) -}}
{{- end -}}
{{- $index | jsonify -}}
