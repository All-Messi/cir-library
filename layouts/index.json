{{- $pages := where .Site.RegularPages "Type" "in" (slice "essays" "chapter") -}}
{{- $index := slice -}}
{{- range $pages -}}
  {{- $titleCats := slice -}}
  {{- range .Params.categories -}}
    {{- $titleCats = $titleCats | append (. | lower | title) -}}
  {{- end -}}
  {{- $trunc := 500 -}}
  {{- if .Params.book }}{{ $trunc = 2000 }}{{ end -}}
  {{- $index = $index | append (dict "title" .Title "permalink" .Permalink "content" (.Plain | truncate $trunc) "categories" $titleCats "book" .Params.book "translation" .Params.translation) -}}
{{- end -}}
{{- $index | jsonify -}}
